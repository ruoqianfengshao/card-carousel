{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es5",
    "module": "esnext",
    "strict": false,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny":false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata":true ,
    "lib": [ "es6", "dom" ],
    "declaration": false,
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "examples/dist/**/*"
  ]
}